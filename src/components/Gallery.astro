<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Top-Aligned Square Gallery</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      background: #fff;
      padding: 0 24px 5vh; /* added 5vh bottom padding */
      font-family: sans-serif;
    }

    .gallery-wrapper {
      width: 90vmin;
      aspect-ratio: 1 / 1;
      margin: 5vh auto; /* vertical margin only, center horizontally */
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
      width: 100%;
      height: 100%;
    }

    .square-wrapper {
      position: relative;
      width: 100%;
      aspect-ratio: 1 / 1;
    }

    .shadow,
    .square {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 12px;
      transition: transform 0.2s ease;
    }

    .shadow {
      background: black;
      transform: translateY(8px);
      z-index: 0;
    }

    .square {
      z-index: 1;
    }

    .square-wrapper:hover .square {
      transform: translateY(-4px);
    }

    .square-wrapper:hover .shadow {
      transform: translateY(12px);
    }
  </style>
</head>
<body>

  <div class="gallery-wrapper">
    <div class="gallery">
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #f87171;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #60a5fa;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #34d399;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #fbbf24;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #a78bfa;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #f472b6;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #38bdf8;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #4ade80;"></div></div>
      <div class="square-wrapper"><div class="shadow"></div><div class="square" style="background-color: #fb7185;"></div></div>
    </div>
  </div>

</body>
</html>
