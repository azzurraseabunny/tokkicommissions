---
import "../styles/colors.css";
---

<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    background: var(--color-bg);
    padding: 0 24px 5vh;
    font-family: 'Fredoka', sans-serif;
    color: var(--color-text);
  }

  .gallery-wrapper {
    width: 90vmin;
    margin: 5vh auto;
    padding: 2rem;
    background: var(--color-bg);
    border-radius: 16px;
    box-shadow:
      0 8px 0 var(--color-shadow),
      0 16px 24px rgba(0, 0, 0, 0.2);
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    .gallery-wrapper {
      width: 95vmin;
	  transform: translate(-3px, 20px)
    }
  }

  .square-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    cursor: pointer;
  }

  .shadow,
  .square {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
    transition: transform 0.2s ease;
    overflow: hidden;
  }

  .shadow {
    background: var(--color-shadow);
    transform: translateY(8px);
    z-index: 0;
  }

  .square {
    z-index: 1;
  }

  .square img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: filter 0.3s ease;
  }

  .square-wrapper:hover .square {
    transform: translateY(-4px);
  }

  .square-wrapper:hover .shadow {
    transform: translateY(12px);
  }

  /* NSFW blur */
  .square img[data-nsfw="true"] {
    filter: blur(16px);
  }

  .square-wrapper[data-nsfw="true"] .square::after {
    content: "";
    position: absolute;
    inset: 0;
    backdrop-filter: blur(8px) contrast(1.2);
    background-color: rgba(255, 255, 255, 0.05);
    z-index: 2;
    border-radius: 12px;
    pointer-events: none;
  }

  /* NSFW label */
  .square-wrapper[data-nsfw="true"]::before {
    content: "NSFW";
    position: absolute;
    top: 8px;
    left: 8px;
    background: var(--color-danger);
    color: var(--color-danger-text);
    font-size: 12px;
    padding: 2px 6px;
    border-radius: 4px;
    z-index: 3;
    font-weight: bold;
  }

  /* Modal styles */
  .modal {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 100;
    overflow: hidden;
    overscroll-behavior: none;
    touch-action: none;
  }

  .modal img {
    max-width: 100%;
    max-height: 100%;
    border-radius: 12px;
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 0.3s ease, transform 0.3s ease;
    filter: none !important;
    object-fit: contain;
  }

  .modal.active {
    opacity: 1;
    pointer-events: auto;
  }

  .modal.active img {
    opacity: 1;
    transform: scale(1);
  }

  .separator {
    width: 100%;
    margin: 5vh auto;
    border: none;
    border-top: 4px dashed var(--color-border-light);
  }

  @media (max-width: 768px) {
    .modal {
      padding: 0;
    }

    .modal img {
      max-width: 100vw;
      max-height: 100vh;
      border-radius: 0;
      transform: none !important;
    }
  }
</style>

<div class="gallery-wrapper">
  <h1 style="text-align: center; margin-top: 1vh; font-size: 2rem;">
    Bust-Up Examples
  </h1>
  <p style="text-align: center; margin-top: 1vh; margin-bottom: 2.5vh; font-size: 1.5rem; color: var(--color-subheading);">
    Roughly 2000px resolution<br>Flat Colors : $15 || Full Detail : $20
  </p>

  <div class="gallery">
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/1.png" alt="1" /></div></div>
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/2.png" alt="2" /></div></div>
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/3.png" alt="3" /></div></div>
  </div>

  <hr class="separator" />

  <h1 style="text-align: center; margin-top: 1vh; font-size: 2rem;">
    Half Body / Thigh-Up Examples
  </h1>
  <p style="text-align: center; margin-top: 1vh; margin-bottom: 2.5vh; font-size: 1.5rem; color: var(--color-subheading);">
    Roughly 2000px x 3000px resolution<br>Flat Colors : $35 || Full Detail : $40
  </p>

  <div class="gallery">
    <div class="square-wrapper" data-nsfw="true"><div class="shadow"></div><div class="square"><img src="gallery/10.png" alt="10" /></div></div>
    <div class="square-wrapper" data-nsfw="true"><div class="shadow"></div><div class="square"><img src="gallery/11.png" alt="11" /></div></div>
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/big or smal.png" alt="big or small" /></div></div>
  </div>

  <hr class="separator" />

  <h1 style="text-align: center; margin-top: 1vh; font-size: 2rem;">
    Full Body Examples
  </h1>
  <p style="text-align: center; margin-top: 1vh; margin-bottom: 2.5vh; font-size: 1.5rem; color: var(--color-subheading);">
    Roughly 2000px x 3000px resolution<br>Flat Colors : $50 || Full Detail : $55
  </p>

  <div class="gallery">
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/12.png" alt="12" /></div></div>
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/rainworm.png" alt="rainworm" /></div></div>
    <div class="square-wrapper"><div class="shadow"></div><div class="square"><img src="gallery/dress.png" alt="dress" /></div></div>
  </div>
</div>

<!-- Modal -->
<div class="modal" id="image-modal">
  <img id="modal-img" src="" alt="Full size" />
</div>

<script>
  const modal = document.getElementById('image-modal');
  const modalImg = document.getElementById('modal-img');
  const imageWrappers = document.querySelectorAll('.square-wrapper img');

  imageWrappers.forEach(img => {
    img.addEventListener('click', () => {
      modalImg.src = img.src;
      modal.classList.add('active');
    });
  });

  modal.addEventListener('click', () => {
    modal.classList.remove('active');
    setTimeout(() => {
      modalImg.src = '';
    }, 300);
  });
</script>
