<style>
  .rules-wrapper {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 3.2rem auto 0;
  }

  .rules-shadow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: black;
    border-radius: 1rem;
    transform: translateY(8px);
    z-index: 0;
  }

  .rules-container {
    position: relative;
    padding: 2rem;
    background-color: white;
    border-radius: 1rem;
    font-family: 'Fredoka', sans-serif;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
  }

  .rules-heading {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }

  .rules-section ul {
    padding-left: 1.25rem;
    list-style: disc;
    line-height: 1.7;
  }

  .rules-note {
    margin-top: 0.5rem;
    font-style: italic;
    font-size: 0.9rem;
    color: #666;
  }
</style>

<!-- RULES SECTION -->
