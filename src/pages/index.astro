---
import "../styles/global.css";
import TermsModal from "../components/TermsModal.astro";
import Gallery from "../components/Gallery.astro";
import Intro from "../components/Intro.astro";
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta charset="utf-8" />
    <title>tokki commissions :o)</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="bg-checkerboard min-h-screen flex flex-col">
    <TermsModal />

    <style>
      main {
        max-width: 1600px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 2rem;
        padding-right: 2rem;
        padding-top: 3rem;
        padding-bottom: 3rem;
        width: 100%;
      }
    </style>

    <main>
      <div class="flex w-full min-h-screen">
        <!-- Left side -->
        <div class="flex-1 flex flex-col items-start justify-start">
          <Intro />
        </div>

        <!-- Right side -->
        <div class="w-1/2 flex items-start justify-end">
          <Gallery />
        </div>
      </div>
    </main>
	
	<Footer />
  </body>
</html>
