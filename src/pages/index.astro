---
import "../styles/global.css";
import TermsModal from "../components/TermsModal.astro";
import Gallery from "../components/Gallery.astro";
import Intro from "../components/Intro.astro";
import Socials from "../components/Socials.astro";
import ArtRequest from "../components/ArtRequest.astro";
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;500;600;700&display=swap" rel="stylesheet">
    <meta charset="utf-8" />
    <title>tokki commissions :o)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />

    <style>
      main {
        max-width: 1600px;
        margin: 0 auto;
        padding: 3rem 2rem;
        width: 100%;
      }

      @media (max-width: 768px) {
	  
	    main {
			max-width: 1600px;
			margin: 0 auto;
			padding: 3rem 2rem;
			width: 100%;
			transform: translateX(5%);
		  }
        
		html {
          font-size: 13px;
        }

        main {
          padding: 2rem 1rem;
        }

        body {
          transform: scale(0.9);
          transform-origin: top left;
        }

        .flex {
          flex-direction: column;
        }

        .flex-1,
        .w-1/2 {
          width: 100% !important;
        }

        .w-full {
          width: 100%;
        }

        .min-h-screen {
          min-height: auto;
        }

        img {
          max-width: 100%;
          height: auto;
        }

        * {
          max-width: 100%;
          box-sizing: border-box;
        }
      }
    </style>
  </head>

  <body class="bg-checkerboard min-h-screen flex flex-col">
    <TermsModal />

    <main>
      <div class="flex w-full min-h-screen">
        <!-- Left side -->
        <div class="flex-1 flex flex-col items-start justify-start">
          <Intro />
          <Socials />
          <ArtRequest />
        </div>

        <!-- Right side -->
        <div class="w-1/2 flex items-start justify-end">
          <Gallery />
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>
